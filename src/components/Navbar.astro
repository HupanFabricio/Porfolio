---
import { itemsNavbar } from '../../data';
---

<div class="fixed bottom-10 z-50 flex w-full justify-center bg-red-200">
    <nav class="fixed bottom-10 z-50">
        <div
            class="flex items-center justify-center gap-2 rounded-full bg-white/15 px-4 py-1 backdrop-blur-sm"
        >
            {
                itemsNavbar.map((item) => {
                    const Icon = item.icon;
                    return (
                        <a
                            title={item.title}
                            href={item.to}
                            class="cursor-pointer rounded-full px-3 py-2 transition duration-75 hover:bg-secondary"
                        >
                            <Icon />
                        </a>
                    );
                })
            }
        </div>
    </nav>
</div>
