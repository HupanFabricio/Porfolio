---
import { itemsNavbar } from "../../data";
---

<div
	class="fixed z-40 flex flex-col items-center justify-center w-full mt-auto h-max bottom-10">
	<nav>
		<div
			class="items-center flex justify-center gap-2 px-4 py-1 rounded-full bg-white/15 backdrop-blur-sm">
			{
				itemsNavbar.map((item) => {
					const Icon = item.icon;
					return (
						<div
							id={item.title}
							class=" transition py-2 duration-200 px-3 rounded-full cursor-pointer hover:bg-secondary">
							<Icon />
						</div>
					);
				})
			}
		</div>
	</nav>
</div>
