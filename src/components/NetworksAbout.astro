---
import { networksData } from '../../data';
import { ArrowUpRight } from '../icons';
---

<div class="flex flex-row gap-4">
    {
        networksData.map((network) => {
            const Icon = network.icon;
            return (
                <a
                    title={network.title}
                    href={network.to}
                    target="_blank"
                    class="group relative cursor-pointer"
                >
                    <Icon class="size-8 stroke-[1.2] opacity-100 transition-all duration-300 group-hover:opacity-0" />
                    <ArrowUpRight class="absolute left-0 top-0 size-8 stroke-[1.2] opacity-0 transition-all duration-300 group-hover:opacity-100" />
                </a>
            );
        })
    }
</div>
